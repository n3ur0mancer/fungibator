void setup() {
  Serial.begin(9600);
  
  //Splash Screen Setup
  display.begin(SSD1306_SWITCHCAPVCC, 0x3C); 
  display.clearDisplay();
  display.drawBitmap(0, 0,  fungibator, 128, 64, WHITE); 
  display.display();
  delay(2000); 
  display.clearDisplay();

  //RELAY
  pinMode(RELAY_PIN, OUTPUT);
  
  //For DHT22
  HT.begin();
}


void loop() {
 float voltage;
 voltage = getVoltage(gasSensor);
 delay(1000);
 humi = HT.readHumidity();
 tempC = HT.readTemperature();
 

//Serial Monitor Prints (Console)
 Serial.print("Humidity:");
 Serial.print(humi,1);
 Serial.print("%");
 Serial.print(" Temperature:");
 Serial.print(tempC,1);
 Serial.print("C ");
 Serial.print(voltage,1);
 Serial.println(" Co2");

 display.clearDisplay();
 oledDisplayHeader();

//OLED Text Settings (font size, x, y, string)
 oledDisplay(2,0,28,humi,"%");
 oledDisplay(2,60,16,tempC,"C");
 oledDisplay(2,60,44,voltage,"");
 
 display.display(); 

 digitalWrite(RELAY_PIN, LOW);

 if (humi<= 75){
    digitalWrite(RELAY_PIN, LOW);
    Serial.println("Humidity low, relay on.");
  }
  else {
    digitalWrite(RELAY_PIN, HIGH);
    Serial.println("Humidity high, relay off.");
  }
}


//HEADERS
void oledDisplayHeader(){
 display.setTextSize(1);
 display.setTextColor(WHITE);
 display.setCursor(0, 0);
 display.print("Humidity");
 display.setCursor(60, 0);
 display.print("Temp/Co2");
}

//OLED SETTINGS
void oledDisplay(int size, int x,int y, float value, String unit){
 display.setTextSize(size);
 display.setTextColor(WHITE);
 display.setCursor(x, y);
 //Humidity Value (value, decimal places)
 display.print(value,1);
 //Value Units
 display.print(unit);
 display.setCursor(x, y);
 //Temperature and Co2 Value (value, decimal places)
 display.print(value,1); 
}

//Gas Sensor Voltage
float getVoltage(int pin){
  return (analogRead(pin) * 0.004882814);
  // This equation converts the 0 to 1023 value that analogRead()
  // returns, into a 0.0 to 5.0 value that is the true voltage
  // being read at that pin.
}
